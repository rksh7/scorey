function gameSelected(record) {   
    var forteam = document.getElementById('forteam'+record).value;
    var againstteam = document.getElementById('againstteam'+record).value;
    var venue = document.getElementById('venue'+record).value;
    var date = document.getElementById('date'+record).value;
    var startedby = document.getElementById('startedby'+record).value;
    var passkey = document.getElementById('passkey'+record).value;
    
    document.getElementById('selected_forteam').value = forteam;
    document.getElementById('selected_againstteam').value = againstteam;
    document.getElementById('selected_venue').value = venue;
    document.getElementById('selected_date').value = date;
    document.getElementById('selected_startedby').value = startedby;
    document.getElementById('selected_passkey').value = passkey;
    
    //alert(document.getElementById('passkey'+record).value);
}

