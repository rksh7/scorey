<!-- SHOW GAMES TO SELECT FROM -->
<section class="box-content box-1" id="start_scorey">
    <div class="container">
        <form name="formSelect_game" method="POST" action="/followscorey">
            <div class="row heading">
                <div class="col-xs-12">	
                    <h2>Follow scorey</h2>
                    <div class="intro">
                        Select one of the games live at the moment,<br> and stay tuned to what's up in the game!
                    </div>
                </div>    
            </div>
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <div class="well" id="divscorey">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th class="games">Select</th>
                                        <th class="games">For</th>
                                        <th class="games">Against</th>
                                        <th class="games">Venue</th>
                                        <th class="games">Date</th>
                                        <th class="games">Started by</th>
                                    </tr>
                                </thead>
                                <tbody>
                                <% for(var i=0; i<live_games.length; i++) {%>
                                <tr class="games">
                                    <td style="align: middle; vertical-align: middle;">
                                        <input type="radio" id= "game<%= i %>" name= "game" value="<%= i %>" onclick = "gameSelected(<%= i %>)">
                                    </td>
                                    <td style="align: middle; vertical-align: middle;"><%= live_games[i].forteam %></td>
                                        <input type="hidden" id="forteam<%= i %>" value="<%= live_games[i].forteam %>"/>
                                    <td style="align: middle; vertical-align: middle;"><%= live_games[i].againstteam %></td>
                                        <input type="hidden" id="againstteam<%= i %>" value="<%= live_games[i].againstteam %>"/>
                                    <td style="align: middle; vertical-align: middle;"><%= live_games[i].venue %></td>
                                        <input type="hidden" id="venue<%= i %>" value="<%= live_games[i].venue %>"/>
                                    <td style="align: middle; vertical-align: middle;"><%= live_games[i].date %></td>
                                        <input type="hidden" id="date<%= i %>" value="<%= live_games[i].date %>"/>
                                    <td style="align: middle; vertical-align: middle;"><%= live_games[i].startedby %></td>
                                        <input type="hidden" id="startedby<%= i %>" value="<%= live_games[i].startedby %>"/> 
                                        <input type="hidden" id="passkey<%= i %>" value="<%= live_games[i].passkey %>"/> 
                                </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>						
                </div>
            </div>        
            <div class="row">
                <div class="col-xs-4">
                    <div class="form-group">
                        <input type="text" class="form-control" name="passkey" id="passkey" placeholder="Enter update key.." required="required" onblur="checkPassKey();" />
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <input type="text" class="form-control" name="user_name" id="user_name" placeholder="Choose a pen name.." required="required" />
                    </div>
                </div>
                <div class="col-xs-4">
                    <div class="form-group">
                        <button type="submit" class="btn btn-block" name="btnPost_scorey" id="btnPost_scorey">
                        START</button>
                    </div>
                </div>                        
            </div>
            <input type="hidden" name="selected_forteam" id= "selected_forteam" value=""/>
            <input type="hidden" name="selected_againstteam" id= "selected_againstteam" value=""/>
            <input type="hidden" name="selected_venue" id= "selected_venue" value=""/>
            <input type="hidden" name="selected_date" id= "selected_date" value=""/>           
            <input type="hidden" name="selected_startedby" id= "selected_startedby" value=""/>
            <input type="hidden" name="selected_passkey" id= "selected_passkey" value=""/>
        </form>
    </div>
