<script>

function setUserValues() {
    
    var sessionUser = document.getElementById('user_name').value;
    
    document.getElementById('scorey_starter').value = sessionUser;
    document.getElementById('scorey_user').value = sessionUser;
    document.getElementById('chatter_user').value = sessionUser;
    
}    
    
    
    $(document).ready( function() {
        $('#backTop').backTop({
            'position' : 1200,
            'speed' : 500,
            'color' : 'red',
        });
    });
</script>    

