<!-- ////////////Content Box 01 -->
<section class="box-content box-1" id="start_scorey">
    <div class="container">
        <div class="row heading">
            <div class="col-xs-12">	
                <h2>New scorey</h2>
                <div class="intro">Fill some game details, and start sharing immediately.<br>Others can join later to give you a helping hand.</div>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <form name="formStart_scorey" method="POST" action="/startscorey">
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="scorey_starter" id="scorey_starter" placeholder="Pick a pen name" required="required" />
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="team_name" id="team_name" placeholder="What's your team" required="required" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="opposition_name" id="opposition_name" placeholder="Who are you playing" required="required" />
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <input type="date" class="form-control" name="date" id="date" placeholder="Date" required="required" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="venue" id="venue" placeholder="Where are you playing" required="required" />
                            </div>
                        </div>
                        <div class="col-xs-6">
                            <div class="form-group">
                                <input type="text" class="form-control" name="passkey" id="passkey" placeholder="Set a passkey" required="required" />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
								<input type="hidden" name="score_update" value="scorey started!...">
                                <button type="submit" class="btn btn-4 btn-block" id="btnStart_scorey onclick=setUserValues();">
								Start my scorey</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
    
